generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String     @id
  name      String
  email     String     @unique
  phone     String?
  tags      UserTag[]
  busySlots BusySlot[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Tag {
  id    String    @id @default(cuid())
  name  String    @unique
  users UserTag[]
}

model UserTag {
  userId String
  tagId  String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([userId, tagId])
  @@index([tagId])
}

model BusySlot {
  id        String   @id @default(cuid())
  from      DateTime
  to        DateTime
  reason    String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([from, to])
}
